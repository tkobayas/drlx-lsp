{
  "name": "drlx-vscode",
  "displayName": "DRLX Language Support",
  "description": "DRLX language support for Visual Studio Code",
  "version": "0.0.1",
  "publisher": "drlx",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": ["Programming Languages"],
  "activationEvents": [
    "onLanguage:drlx"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "drlx",
        "aliases": ["DRLX", "drlx"],
        "extensions": [".drlx"],
        "configuration": "./language.configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "drlx",
        "scopeName": "source.drlx",
        "path": "./syntaxes/drlx.tmLanguage"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "DRLX configuration",
      "properties": {
        "drlx.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "drlx.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": ["off", "messages", "verbose"],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "pack:dev": "npm run compile && vsce package --no-dependencies -o ./dist/",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@vscode/test-electron": "^2.1.5",
    "@vscode/vsce": "^2.15.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  }
}